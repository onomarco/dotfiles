# EditorConfig - Maintain consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{py,go,js,ts,jsx,tsx,sh,bash,zsh}]
indent_style = space
indent_size = 4

# Python
[*.py]
indent_size = 4
max_line_length = 88

# Go
[*.go]
indent_style = tab
indent_size = 4

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 4

# Makefiles (must use tabs)
[Makefile]
indent_style = tab

# Config files
[{package.json,.prettierrc,.eslintrc}]
indent_size = 2

# HTML/CSS
[*.{html,css,scss}]
indent_size = 2
